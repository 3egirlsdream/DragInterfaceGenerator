<UserControl x:Class="DragInterfaceGenerator.MyTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DragInterfaceGenerator"
             mc:Ignorable="d" >
    <Grid  x:Name="btn">
        <WrapPanel>
            <Border Width="100" Background="White"  Height="30" BorderThickness="1" BorderBrush="Gray">
                <TextBlock x:Name="tblock"  Text="文本框" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Border>
            
            <TextBox x:Name="tb" Width="200" Height="30" BorderBrush="LightGray" BorderThickness="1" IsReadOnly="True"/>
        </WrapPanel>
        
    </Grid>
</UserControl>
