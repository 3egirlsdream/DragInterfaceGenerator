<Page x:Class="DragInterfaceGenerator.ButtonSetting"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DragInterfaceGenerator"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="300"
      Title="ButtonSetting">

    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="按钮名称 "/>
                <TextBox x:Name="name_zh" Text="" Width="100"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="按钮字段 "/>
                <TextBox x:Name="name_eg"  Text="" Width="100"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button Content="保存" Width="100" Click="Button_Click"/>
            </StackPanel>
            
        </StackPanel>
    </Grid>
</Page>
